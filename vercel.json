{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/mcp", "dest": "/api/mcp" },
    { "src": "/health", "dest": "/api/health" },
    { "src": "/widget/(.*)", "dest": "/public/widgets/$1" },
    { "src": "/(.*)", "dest": "/api/$1" }
  ]
}
